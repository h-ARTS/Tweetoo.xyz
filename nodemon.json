{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": [
    "api/**/*.ts",
    "api/**/*.graphql",
    "api/**/*.gql"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,json,graphql",
  "exec": "ts-node api/index.ts"
}
